class <%= @controller_class_name %> < ApplicationController

  #Index Controller
  get "/<%=@table_name%>" do
    erb :"/<%=@table_name%>/index"
  end

  #New Item Controllers
  get "/<%=@table_name%>/new" do
    erb :"/<%=@table_name%>/new"
  end

  post "/<%=@table_name%>" do
    "Create a new item"

    redirect "/<%=@table_name%>"
  end

  #Show Item Controller
  get "/<%=@table_name%>/:slug" do
    erb :"/<%=@table_name%>/show"
  end

  #Edit Item Controller
  get "/<%=@table_name%>/:slug/edit" do
    erb :"/<%=@table_name%>/edit"
  end

  patch "/<%=@table_name%>" do
    "Edits an individual item"

    #redirect "/<%=@table_name%>/:slug" TODO: update ":slug" with the item"s :ID and uncomment
  end

  #Delete Item Controller
  delete "/<%=@table_name%>/:slug/delete" do
    "Deletes an individual item"

    redirect "/<%=@table_name%>"
  end
end
